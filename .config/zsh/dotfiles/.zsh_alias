# Aliases

alias sudo=$PERM
alias doas=$PERM
alias rootdo=$PERM

case "$LIST" in
"exa") alias ls='$LIST -lah --color=auto --icons' ;;
"ls") alias ls='$LIST -lah --colors=auto' ;;
esac

alias ll='$LIST -lah | wc -l'

alias Q='exit'
alias :q='exit'
alias q='exit'
alias ZZ='exit'
alias ZQ='exit'
alias :c='clear'

alias emerge="$PERM emerge"

alias rss='killall mpv ; killall newsboat ; newsboat'

# File management
alias mkdir='mkdir -pv'

# youtube-dl aliases
alias mp3dl='$PERM youtube-dl -x --audio-format mp3 --prefer-ffmpeg'
alias mp4dl='$PERM youtube-dl -f best --prefer-ffmpeg'

# Config files
alias urls='$EDITOR ~/.config/newsboat/urls'
alias zshrc='$EDITOR $ZDOTDIR/.zshrc'
alias makeconf='$PERM $EDITOR /etc/portage/make.conf'

# cd aliases
alias ..='cd ..'
alias .2='cd ../..'
alias .3='cd ../../..'
alias .4='cd ../../../..'
alias .5='cd ../../../../..'

alias goconfig="cd ~/.config"
alias godl="cd ~/Downloads"
alias gostor="cd /mnt/storage01"
alias gostor2="cd /mnt/storage02"
alias gobin="cd /usr/bin"
alias gohome="cd ~/"
alias golocal="cd /usr/local/bin"
alias gorec="cd ~/Videos"
alias goproj="cd ~/Projects"

alias untar='$PERM tar xpvf'
alias unrar='$PERM unrar x'

alias df='df -h'
